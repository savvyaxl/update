- name: Update all installed packages using YUM module
  become: true
  register: yum_updates
  yum:
    name: '*'
    state: latest
    update_cache: yes
    update_only: yes

- name: check to see if we need a reboot
  become: true
  command: needs-restarting -r
  register: needsrestart
  changed_when: needsrestart.rc == 1
  ignore_errors: yes
  failed_when: needsrestart.rc > 1

- name: Perform reboot
  when: inventory_hostname not in no_restart and needsrestart.rc == 1
  become: true
  async: 120
  poll: 10
  timeout: 200
  ignore_errors: yes
  failed_when: false
  register: rebooted
  ansible.builtin.shell: sleep 5 && reboot


